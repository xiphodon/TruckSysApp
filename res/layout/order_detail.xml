<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_titlebar_bg" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:onClick="back"
            android:src="@drawable/top_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="货源详情"
            android:textColor="#f0f0f0"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#eee" >

        <LinearLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="#eee"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/state_layout"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@color/white"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/type2" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dip"
                android:background="@drawable/border"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:padding="14dp"
                        android:src="@drawable/start_circle" />

                    <TextView
                        android:id="@+id/start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="河南省 郑州市"
                        android:textColor="@color/text_color_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:padding="14dp"
                        android:src="@drawable/end_circle" />

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:layout_marginRight="40dip"
                        android:background="@drawable/border_top"
                        android:gravity="center_vertical"
                        android:text="河南省 郑州市"
                        android:textColor="@color/text_color_black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/deliverTime"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_marginLeft="40dip"
                        android:gravity="center_vertical"
                        android:text="发货日期   2015-05-20"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@drawable/border" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="76dip"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="货物类型"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/gtype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dip"
                            android:text="设备"
                            android:textColor="@color/grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="76dip"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="重量／体积"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dip"
                            android:text="10吨"
                            android:textColor="@color/grey" />

                        <TextView
                            android:id="@+id/unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dip"
                            android:textSize="10dip" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="76dip"
                            android:layout_height="40dp"
                            android:gravity="right|center_vertical"
                            android:text="备注"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dip"
                            android:text="备注"
                            android:textColor="@color/grey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dip"
                    android:layout_height="120dip"
                    android:gravity="center_vertical|center_horizontal" >

                    <ImageView
                        android:id="@+id/Pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dip"
                        android:src="@drawable/default_cargopic" >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@drawable/border"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="需要车型"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/vtypes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dip"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="需要车长"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/vsizes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dip"
                        android:text="10吨"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="价格区间"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dip"
                        android:text="价格面议"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@drawable/border" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="76dip"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="货主"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/shipper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dip"
                            android:text="123"
                            android:textColor="@color/grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ctime_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:layout_width="76dip"
                            android:layout_height="40dp"
                            android:gravity="right|center_vertical"
                            android:text="发布时间"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/ctime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="16dip"
                            android:text="2015-05-18"
                            android:textColor="@color/grey" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal" >

                    <ImageView
                        android:id="@+id/follow"
                        android:layout_width="40dip"
                        android:layout_height="40dip"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:padding="5dip"
                        android:src="@drawable/ic_follow"
                        android:tag="follow" >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:background="@drawable/border_top"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="订单号"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dip"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="下单时间"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/grabtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dip"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="取货确认"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/accepttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dip"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="送达确认"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/sendtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dip"
                        android:textColor="@color/grey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="76dip"
                        android:layout_height="40dp"
                        android:gravity="right|center_vertical"
                        android:text="签收确认"
                        android:textColor="@color/text_color_black" />

                    <TextView
                        android:id="@+id/signtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dip"
                        android:textColor="@color/grey" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_top2"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/call"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@color/green"
            android:padding="8dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="拨打电话"
            android:textColor="@color/white" >
        </Button>

        <Button
            android:id="@+id/grab"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@color/grey"
            android:padding="8dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:text="抢"
            android:textColor="@color/white" >
        </Button>
    </LinearLayout>

</LinearLayout>