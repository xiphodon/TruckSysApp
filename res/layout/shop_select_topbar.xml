<?xml version="1.0" encoding="utf-8"?>
<com.sy.trucksysapp.widget.GoodsListTopBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gls_sort_mode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_sort_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rl_sel_area"
            style="@style/goods_sort_bg_style"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_sel_area"
                style="@style/goods_sort_name_style"
                android:text="区域" />
        </RelativeLayout>

        <View
            android:id="@+id/line_rl_price"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/goods_sort_line" />

        <RelativeLayout
            android:id="@+id/rl_sort_price"
            style="@style/goods_sort_bg_style"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_sort_price"
                style="@style/goods_sort_name_style"
                android:text="价格" />

            <ImageView
                android:id="@+id/iv_sort_price_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dip"
                android:layout_toLeftOf="@+id/tv_sort_price"
                android:src="@drawable/sort_price_none" />
        </RelativeLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/goods_sort_line" />

        <RelativeLayout
            android:id="@+id/rl_term1"
            style="@style/goods_sort_bg_style" >

            <TextView
                android:id="@+id/tv_term1"
                style="@style/goods_sort_name_style"
                android:text="销量" />
        </RelativeLayout>

        <View
            android:id="@+id/line_rl_term2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/goods_sort_line" />

        <RelativeLayout
            android:id="@+id/rl_term2"
            style="@style/goods_sort_bg_style" >

            <TextView
                android:id="@+id/tv_term2"
                style="@style/goods_sort_name_style"
                android:text="人气" />
        </RelativeLayout>

        <View
            android:id="@+id/line_rl_select"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@drawable/goods_sort_line" />

        <RelativeLayout
            android:id="@+id/rl_select"
            style="@style/goods_sort_bg_style"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/tv_select"
                style="@style/goods_sort_name_style"
                android:text="筛选" />

            <ImageView
                android:id="@+id/iv_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dip"
                android:layout_toLeftOf="@+id/tv_select"
                android:src="@drawable/common_title_filter_normal" />
        </RelativeLayout>
    </LinearLayout>

</com.sy.trucksysapp.widget.GoodsListTopBar>