<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/page_bg_detailcommon"
        android:fadingEdge="vertical"
        android:scrollbars="@null" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_image"
                android:layout_width="match_parent"
                android:layout_height="160dp" >

                <ImageView
                    android:id="@+id/img_top_shop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:scaleType="fitXY" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="#33000000"
                    android:paddingLeft="10dp" >

                    <LinearLayout
                        android:id="@+id/ll_shop_adress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/view"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="轮胎专卖店"
                            android:textColor="@color/text_color_white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="郑州金水区"
                            android:textColor="@color/text_color_gray_d8"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/view"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_shop_tel"
                        android:src="@drawable/base_action_bar_back_divider" />

                    <ImageView
                        android:id="@+id/img_shop_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shop_tel" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ffd9d9d9" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/text_color_white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="供应商信息"
                        android:textColor="#6f7072"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/v_split"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:background="#EFEFEF" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/iv_contacts"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/contacts" />

                            <TextView
                                android:id="@+id/tv_contacts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_contacts"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/text_color_gray_d8" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/iv_qq"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/qq" />

                            <TextView
                                android:id="@+id/tv_qq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_qq"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/text_color_gray_d8" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/iv_email"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/email" />

                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_email"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/text_color_gray_d8" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/iv_fax"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/fax" />

                            <TextView
                                android:id="@+id/tv_fax"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/iv_fax"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textColor="@color/text_color_gray_d8" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

          

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/text_color_white"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="经营范围"
                        android:textColor="#6f7072"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="10dp"
                        android:background="#EFEFEF" />

                    <WebView
                        android:id="@+id/tv_shop_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="经营范围经营范围经营范围经营范围经营范围经营范围经营范围" />
                </LinearLayout>

                <include layout="@layout/shop_item_details" />
                
                
                
                <LinearLayout
                android:id="@+id/estimate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/text_color_white"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="用户评价"
                    android:textColor="#6f7072"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/v_split"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:background="#EFEFEF" />

                <LinearLayout
                    android:id="@+id/li_parse_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.sy.trucksysapp.widget.ScrollListView
                        android:id="@+id/lv_evaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants"
                        android:divider="@color/select_pressed"
                        android:dividerHeight="1px"
                        android:fadingEdge="none"
                        android:fastScrollEnabled="false"
                        android:footerDividersEnabled="false"
                        android:headerDividersEnabled="false"
                        android:scrollbars="none"
                        android:smoothScrollbar="true" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#EFEFEF" />

                <TextView
                    android:id="@+id/tv_prase_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:text="查看更多评价"
                    android:textColor="@color/text_color_gray_d8"
                    android:textSize="@dimen/midtext"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_prase_lable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="暂无评价"
                    android:textColor="@color/text_color_gray_d8" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>