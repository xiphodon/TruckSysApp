<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_common"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_topbase"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FAFAFA" >

        <ImageView
            android:id="@+id/topbase_back"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:onClick="back"
            android:src="@drawable/left_arrow" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/topbase_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结算支付"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/largetext" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#F0EFED" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_all"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="收件人信息"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#F0EFED" />

                <LinearLayout
                    android:id="@+id/ll_address_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_selector"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp" >

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:hint="点击填写收件人信息!"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/size_14" />

                        <TextView
                            android:id="@+id/tv_user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/text_color_black"
                            android:textSize="@dimen/size_14" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_user_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/text_color_gray_d8"
                        android:textSize="@dimen/size_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rel_set_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/list_item_selector"
                    android:clickable="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_setaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="安装地址:"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/size_14" />

                    <TextView
                        android:id="@+id/tv_user_setaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/iv_payarrow1"
                        android:hint="点击选择安装地址！"
                        android:singleLine="true"
                        android:textColor="@color/text_color_gray_d8"
                        android:textSize="@dimen/size_14" />

                    <ImageView
                        android:id="@+id/iv_payarrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:src="@drawable/app_network_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#F0EFED" />
                <!-- 付款方式 -->

                <RelativeLayout
                    android:id="@+id/rl_payarrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="支付方式"
                        android:textColor="@color/text_color_black"
                        android:textSize="@dimen/size_16" />

                    <ImageView
                        android:id="@+id/iv_payarrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="true"
                        android:src="@drawable/app_network_arrow_down" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#F0EFED" />

                <LinearLayout
                    android:id="@+id/li_zhifu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/rl_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:visibility="visible"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_payment_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_weixin" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_payment_head"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="微信"
                                android:textColor="@color/text_color_gray_d10"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="微信支付"
                                android:textColor="@color/text_color_gray_d11"
                                android:textSize="@dimen/size_12" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/weixin_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/cart_select_selector"
                            android:checked="false" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED" />

                    <RelativeLayout
                        android:id="@+id/rl_zhifubao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:visibility="visible"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_zhifubao_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_zhifubao" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_zhifubao_head"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="支付宝"
                                android:textColor="@color/text_color_gray_d10"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="支付宝支付"
                                android:textColor="@color/text_color_gray_d11"
                                android:textSize="@dimen/size_12" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/zhifubao_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/cart_select_selector"
                            android:checked="false" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED" />

                    <RelativeLayout
                        android:id="@+id/rl_yinlian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:visibility="gone"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_yinlian_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_yinlian" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_yinlian_head"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="银联支付"
                                android:textColor="@color/text_color_gray_d10"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="银联快捷支付"
                                android:textColor="@color/text_color_gray_d11"
                                android:textSize="@dimen/size_12" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/yinlian_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/cart_select_selector"
                            android:checked="false" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED" />

                    <RelativeLayout
                        android:id="@+id/rl_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_account_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_account" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_account_head"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="个人账户"
                                android:textColor="@color/text_color_gray_d10"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="账户余额支付"
                                android:textColor="@color/text_color_gray_d11"
                                android:textSize="@dimen/size_12" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/account_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/cart_select_selector"
                            android:checked="true" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rl_pos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <ImageView
                            android:id="@+id/img_pos_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/icon_pos" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_pos_head"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="POS支付"
                                android:textColor="@color/text_color_gray_d10"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="POS线下支付"
                                android:textColor="@color/text_color_gray_d11"
                                android:textSize="@dimen/size_12" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/pos_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:button="@drawable/cart_select_selector"
                            android:checked="false" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#ffffff" />
                <!-- 配送方式 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="配送方式"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#F0EFED" />

                <RadioGroup
                    android:id="@+id/rg_send_way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_white"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <RadioButton
                                android:id="@+id/radio_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:checked="true"
                                android:drawableLeft="@drawable/cart_select_selector"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="物流自提"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <RadioButton
                                android:id="@+id/radio_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/cart_select_selector"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="到店提货"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <RadioButton
                                android:id="@+id/radio_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/cart_select_selector"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="上门送货"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <RadioButton
                                android:id="@+id/radio_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/cart_select_selector"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="到店安装"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <RadioButton
                                android:id="@+id/radio_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/cart_select_selector"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="上门安装"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left" >

                            <RadioButton
                                android:id="@+id/radio_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:drawableLeft="@drawable/cart_select_selector"
                                android:drawablePadding="10dp"
                                android:gravity="center"
                                android:text="上门安装"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14"
                                android:visibility="invisible" />
                        </LinearLayout>
                    </LinearLayout>
                </RadioGroup>
                <!-- 金额明细 -->

                <RelativeLayout
                    android:id="@+id/rl_payservice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_white"
                    android:clickable="true"
                    android:padding="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="安装服务标准&lt;点击查看>"
                        android:textColor="@color/blue_bg"
                        android:textSize="@dimen/size_14" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="金额明细"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/size_16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#F0EFED" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/text_color_white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_contracts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="商品金额:"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:id="@+id/tv_contractValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_contracts"
                            android:textColor="@color/text_color_black" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:text="配送费:"
                            android:textColor="@color/text_color_black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/tv_phone"
                            android:text="18682313559"
                            android:textColor="@color/text_color_black" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/li_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="#F0EFED" />

                        <RelativeLayout
                            android:id="@+id/rb_coupons"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_select_item"
                            android:clickable="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="选择优惠券"
                                android:textColor="@color/text_color_black"
                                android:textSize="@dimen/size_14" />

                            <TextView
                                android:id="@+id/tv_coupon_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/img_right"
                                android:text="￥0.00"
                                android:textColor="@color/text_color_orange"
                                android:textSize="@dimen/size_14" />

                            <ImageView
                                android:id="@+id/img_right"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/app_network_arrow" />

                            <TextView
                                android:id="@+id/tv_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:text="完成"
                                android:textColor="@color/text_color_orange"
                                android:textSize="@dimen/largetext"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/line_lv"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED"
                        android:visibility="gone" />

                    <com.sy.trucksysapp.widget.MyListView
                        android:id="@+id/lv_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:divider="#ffd9d9d9"
                        android:dividerHeight="1px"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#F0EFED" />
                </LinearLayout>
                <!-- 备注信息 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="备注信息"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/size_16" />

                <EditText
                    android:id="@+id/edt_order_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:hint="订单备注"
                    android:padding="10dp"
                    android:textSize="@dimen/size_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/check_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@null"
                        android:checked="true"
                        android:drawableLeft="@drawable/bg_checkbox"
                        android:drawablePadding="10dp"
                        android:text="同意卡车团协议"
                        android:textColor="@color/blue_bg"
                        android:textSize="@dimen/size_14" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- 底部付款 -->

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#FAFAFA"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="8dip"
            android:paddingLeft="12dip"
            android:paddingRight="12dip"
            android:paddingTop="8dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应付金额："
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:id="@+id/tv_cart_all_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dip"
                    android:text=""
                    android:textColor="@color/red"
                    android:textSize="@dimen/size_14" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="0dip"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/iv_cart_buy"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:background="@drawable/home_shop_selector"
                    android:gravity="center"
                    android:text="付款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/largetext" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>