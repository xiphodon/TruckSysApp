<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp" >

        <RelativeLayout
            android:id="@+id/user_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slide_menubg"
            android:clickable="true"
            android:padding="10dp" >

            <com.sy.trucksysapp.widget.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res/com.sy.trucksysapp"
                android:id="@+id/user_head_img"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:background="@drawable/user_login_default_avatar"
                android:scaleType="fitXY"
                app:border_color="@android:color/transparent"
                app:border_width="1px"
                app:corner_radius="100dip" />

            <TextView
                android:id="@+id/user_nick_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_head_img"
                android:text="未登录(点击登录)"
                android:textColor="#f0f0f0"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="我的收藏"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/set_pressed" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="车辆认证"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/set_pressed" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="积分余额"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/set_pressed" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="浏览足迹"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/set_pressed" />

                    <RelativeLayout
                        android:id="@+id/produce_setting"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="程序设置"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/set_pressed" />

                    <RelativeLayout
                        android:id="@+id/app_update"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="检查更新"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/set_pressed" />

                    <RelativeLayout
                        android:id="@+id/logout_rel"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/slide_menubg"
                        android:clickable="true"
                        android:visibility="invisible" >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:drawableLeft="@drawable/slidding_menu_settings"
                            android:drawablePadding="10dp"
                            android:text="退出登录"
                            android:textColor="#f0f0f0"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/slide_menubg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/slidding_menu_settings"
                    android:drawablePadding="10dp"
                    android:text="设置"
                    android:textColor="@color/page_main_menutext"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/slide_menubg"
                android:clickable="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/slidding_menu_update"
                    android:drawablePadding="10dp"
                    android:text="反馈"
                    android:textColor="@color/page_main_menutext"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>